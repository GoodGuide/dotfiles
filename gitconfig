[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor=vim
  excludesfile = ~/.gitignore_global
  autocrlf = input

[advice]
  statusHints = no

[push]
  default = current

[pull]
  default = current

[fetch]
  recurseSubmodules = yes

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = green
  changed = magenta
  untracked = red
  branch = green

[merge]
  defaultToUpstream = true
  conflictStyle=diff3

[alias]
  a = add
  aa = add -A
  ae = add --edit
  ap = add --patch
  b = branch
  br = branch
  c = commit -v
  ci = commit -v
  co = checkout
  com = checkout  master
  d = diff --word-diff
  dc = diff --cached
  df = diff
  dw = diff --word-diff
  dwc = diff --word-diff --cached
  f = fetch --all
  fe = fetch --all
  ff = merge --ff-only
  g = log --graph --decorate --pretty=oneline --abbrev-commit
  ga = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ign = ls-files -o -i --exclude-standard
  l = log
  lg = log --graph --pretty=custom --abbrev-commit --date=relative
  ll = log --graph --pretty=custom --abbrev-commit --date=relative
  log-json = log --pretty=json
  ls = ls-files
  mc = merge --no-ff
  mt = mergetool
  ps = push
  rb = rebase
  rbc = rebase --continue
  rbi = rebase -i
  rs = reset
  s = status -sb
  su = submodule update --init

[pretty]
  custom = "%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset"
  json = '\"%h\": {%n  \"commit\": \"%H\",%n  \"author\": \"%an <%ae>\",%n  \"date\": \"%ad\",%n  \"message\": \"%s\"%n}'

[include]
  path = ~/.gitconfig.private ; include name/email/etc.
